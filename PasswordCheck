#include <iostream>
#include <string> 
using namespace std;

int main() {
    string password = "1234";
    string guess;

    cout << "enter your password please" << endl;
    cin >> guess;

    while (guess != password) {
        cout << "try again :" << endl;
        cin >> guess;
    }

    cout << "password is correct";
    
    return 0;
}
