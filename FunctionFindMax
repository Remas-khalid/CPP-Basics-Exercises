#include <iostream>
using namespace std;

int MaxArr(int array[], int sizeofarray) {
    int max;
    max = array[0];

    for (int i = 1; i < sizeofarray; i++) {
        if (max < array[i]) {
            max = array[i];
        }
    }
    cout << "the maxium numbers :" << max;
    return max;
}

int main() {
    int size;
    cout << "how many numbers do you want" << endl;
    cin >> size;

    int arr[size];

    for (int i = 0; i < size; i++) {
        cout << "enter number : ";
        cin >> arr[i];
    }

    MaxArr(arr, size);
    
    return 0;
}
